# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=SilksongController
APP_VERSION=1.0.0
ENVIRONMENT=development

# Server Configuration
HOST=localhost
PORT=8000
DEBUG=true

# Android App Communication
ANDROID_APP_PORT=8001
WEBSOCKET_PORT=8002

# Game Settings
GAME_WINDOW_TITLE="Hollow Knight: Silksong"
GAME_PROCESS_NAME="HollowKnight.exe"

# Input Simulation Settings
INPUT_DELAY_MS=50
RESPONSE_TIME_MS=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security (if implementing authentication)
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database (if needed later)
DATABASE_URL=sqlite:///./silksong_controller.db

# API Keys (for future integrations)
# STEAM_API_KEY=your-steam-api-key
# DISCORD_WEBHOOK_URL=your-discord-webhook-url
